<div id="occ_preview_control"><span id="preview_close">${ltext("view.preview.close")} &times;</span></div>
<div id="occ_preview_content">

<h2><span id="scientificname"></span></h2>

<dl class="occ_preview_classification clear_fix">
	<dt>${ltext("occ.kingdom")}: </dt><dd><span id="kingdom"></span></dd>
	<dt>${ltext("occ.phylum")}: </dt><dd><span id="phylum"></span></dd>
	<dt>${ltext("occ._class")}: </dt><dd><span id="_class"></span></dd>
	<dt>${ltext("occ._order")}: </dt><dd><span id="_order"></span></dd>
	<dt>${ltext("occ.family")}: </dt><dd><span id="family"></span></dd>
	<dt>${ltext("occ.genus")}: </dt><dd><span id="genus"></span></dd>
	<dt>${ltext("occ.rawscientificname")}: </dt><dd><span id="rawscientificname"></span></dd>
</dl>
<p class="occ_preview_links"><a id="viewfullrecord" href="#" target="_blank">${ltext("view.preview.viewfullrecord")}</a><span> | <a id="viewsourcerecord" href="#" target="_blank">${ltext("view.preview.viewsourcerecord")}</a></span></p>
<dl class="occ_preview_data clear_fix">
	<dt>${ltext("occ.institutioncode")}</dt><dd id="institutioncode"></dd>
	<dt>${ltext("occ.datasetname")}</dt><dd id="datasetname"></dd>
</dl>
<dl class="occ_preview_data clear_fix">
	<dt>${ltext("occ.catalognumber")}</dt><dd id="catalognumber"></dd>
	<dt>${ltext("occ.recordedby")}</dt><dd id="recordedby"></dd>
	<dt>${ltext("occ.recordnumber")}</dt><dd id="recordnumber"></dd>
</dl>
<dl class="occ_preview_data clear_fix">	
	<dt>${ltext("view.preview.daterange")}</dt><dd><span id="daterange"></span></dd>
</dl>
<dl class="occ_preview_data clear_fix">
	<dt>${ltext("occ.country")}</dt><dd id="country"></dd>
	<dt>${ltext("occ.stateprovince")}</dt><dd id="stateprovince"></dd>
	<dt>${ltext("occ.locality")}</dt><dd id="locality"></dd>
	<dt>${ltext("view.preview.latlong")}</dt><dd><span id="decimallatitude"></span> <span id="decimallongitude"></span></dd>
	<dt>${ltext("view.preview.altituderange")}</dt><dd id="altituderange"></dd>
</dl>
<dl class="occ_preview_data clear_fix">
	<dt>${ltext("occ.habitat")}</dt><dd id="habitat"></dd>
</dl>
<dl class="occ_preview_data clear_fix">
	<dt>${ltext("occ.associatedmedia")}</dt><dd id="occ_preview_media"></dd>
</dl>
</div>